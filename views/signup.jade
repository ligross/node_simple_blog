extends layout

block content
   .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
         .panel-body
            if errors.length > 0
               .alert.alert-warning.alert-dismissible(role="alert")
                  button.close(type="button", data-dismiss="alert")
                     span(aria-hidden="true") &times;
                     span.sr-only Закрыть
                  strong Внимание!
                  for err in errors
                     div #{err}
            form.form-signin(role="form", method='POST', action='/signup')
               fieldset
                  .form-group
                     input.form-control.input-lg(placeholder="E-mail", name="email", type="email", autofocus=true, required)
                     input.form-control.input-lg(placeholder="Пароль", name="password", type="password", value="", required)
                     input.form-control.input-lg(placeholder="Имя пользователя", name="username", value="", required)

                  button.btn.btn-lg.btn-success.btn-block Регистрация